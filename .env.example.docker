# ===========================
# 5500 Backend - Docker Dev Example Env
# ===========================

# Application
APP_NAME=5500 Backend
APP_ENV=dev
PORT=8000

# Database (Docker internal)
# Use service name 'database' in compose network, NOT localhost
DATABASE_URL=postgresql+psycopg://class_connect_user:class_connect_password@database:5432/class_connect_db

# JWT (dev only; replace in production)
JWT_SECRET=change_me_in_dev
JWT_EXPIRE_HOURS=24

# CORS allowed origins (adjust if frontend port differs)
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Public app URL (used for QR codes or frontend API calls)
PUBLIC_APP_URL=http://localhost:5173

# Host port for backend (host:container mapping in compose)
HOST_PORT=8000

# Optional: logging verbosity (info, debug, warning)
LOG_LEVEL=debug
