# Application Settings
APP_NAME=ClassConnect Backend
APP_ENV=dev
PORT=8000

# Database Configuration (PostgreSQL for development)
# Format: postgresql+psycopg://username:password@host:port/database_name
DATABASE_URL=postgresql+psycopg://class_connect_user:class_connect_password@localhost:5432/class_connect_db

# JWT Configuration
# Generate a secure secret key for production (e.g., using: openssl rand -hex 32)
JWT_SECRET=your-secure-jwt-secret-key-here
JWT_EXPIRE_HOURS=24

# CORS Settings
# List of allowed origins for CORS (JSON array format)
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Public App URL for QR codes
# This URL is used in QR codes for session joining
PUBLIC_APP_URL=http://localhost:5173
