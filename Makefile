# Makefile for FastAPI backend project
# Common development shortcuts
# git test
# -------------------------------------------------
# VARIABLES
# -------------------------------------------------
PYTHON = uv run python
UV = uv run
APP = app.main
PORT = 8000

# -------------------------------------------------
# INSTALLATION & SETUP
# -------------------------------------------------
.PHONY: setup
setup:
	@echo "üîß Setting up development environment..."
	uv sync
	uv run pre-commit install
	@echo "‚úÖ Setup complete!"

# -------------------------------------------------
# RUNNING THE APP
# -------------------------------------------------
.PHONY: run
run:
	@echo "üöÄ Starting FastAPI app..."
	$(UV) uvicorn $(APP):app --reload --port $(PORT)

.PHONY: dev
dev:
	@echo "üöÄ Starting development environment..."
	@echo "üê≥ Starting complete Docker stack with backend, database, and pgAdmin..."
	docker-compose -f docker-compose.dev.yml up -d
	@echo "‚è≥ Waiting for services to be ready..."
	sleep 15
	@echo "üîç Checking database connection..."
	@until docker exec 5500_database_dev pg_isready -U class_connect_user -d class_connect_db; do echo "Waiting for database..."; sleep 2; done

	@echo "üßæ Ensuring initial Alembic revision exists (if no *.py in versions/)..."
	@if [ -z "$$(ls -1 alembic/versions/*.py 2>/dev/null)" ]; then \
		echo "No migration .py files found. Autogenerating initial migration..."; \
		docker-compose -f docker-compose.dev.yml exec backend uv run alembic revision --autogenerate -m "initial schema"; \
	else \
		echo "Migration files detected:"; \
		ls -1 alembic/versions/*.py 2>/dev/null || true; \
	fi

	@echo "üîÑ Running migrations..."
	make db-migrate
	@echo "üå± Seeding database..."
	make db-seed
	@echo "‚úÖ Development environment ready!"
	@echo "üìä Database: localhost:5432"
	@echo "üåê pgAdmin: http://localhost:5050"
	@echo "üöÄ Backend: http://localhost:8000"
	@echo "üìã View logs with: make docker-logs"
	@echo "üìã Stop services with: make docker-down"
	docker-compose -f docker-compose.dev.yml logs -f backend


# -------------------------------------------------
# CODE QUALITY CHECKS
# -------------------------------------------------
.PHONY: format
format:
	@echo "üé® Running Black formatter..."
	$(UV) black .

.PHONY: lint
lint:
	@echo "üßπ Running Ruff linter..."
	$(UV) ruff check . --fix

.PHONY: typecheck
typecheck:
	@echo "üß† Running Mypy type checks..."
	$(UV) mypy .

.PHONY: precommit
precommit:
	@echo "üîç Running pre-commit on all files..."
	$(UV) pre-commit run --all-files

# -------------------------------------------------
# FULL CODE VALIDATION
# -------------------------------------------------
.PHONY: check
check: format lint typecheck
	@echo "‚úÖ All code checks passed!"

# -------------------------------------------------
# GIT & COMMIT HELPERS
# -------------------------------------------------
.PHONY: commit
commit:
	@echo "üîß Running pre-commit checks and auto-fixing..."
	$(UV) pre-commit run --all-files || true
	@echo "üìù Adding all changes..."
	git add .
	@echo "‚úÖ Ready to commit! Run: git commit -m 'your message'"

.PHONY: commit-auto
commit-auto:
	@echo "ü§ñ Auto-committing with pre-commit fixes..."
	$(UV) pre-commit run --all-files || true
	git add .
	git commit -m "Auto-fix: $(shell date '+%Y-%m-%d %H:%M:%S')" || echo "No changes to commit"

# -------------------------------------------------
# CLEANUP
# -------------------------------------------------
.PHONY: clean
clean:
	@echo "üóëÔ∏è Cleaning temporary files..."
	find . -type d -name "__pycache__" -exec rm -rf {} +
	find . -type f -name "*.pyc" -delete
	find . -type f -name "*.pyo" -delete
	@echo "‚ú® Cleanup done."

# -------------------------------------------------
# DOCKER COMMANDS
# -------------------------------------------------
.PHONY: docker-up
docker-up:
	@echo "üê≥ Starting 5500 database with Docker..."
	docker-compose -f docker-compose.dev.yml up -d database
	@echo "‚úÖ 5500 database is running on localhost:5432"

.PHONY: docker-pgadmin
docker-pgadmin:
	@echo "üê≥ Starting 5500 database and pgAdmin..."
	docker-compose -f docker-compose.dev.yml up -d
	@echo "‚úÖ 5500 database is running on localhost:5432"
	@echo "‚úÖ pgAdmin is running on localhost:5050"
	@echo "üìã Login: admin@classconnect.com / admin_password"

.PHONY: docker-full
docker-full:
	@echo "üöÄ Starting full 5500 stack (backend + database + pgAdmin)..."
	docker-compose -f docker-compose.dev.yml up -d
	@echo "‚è≥ Waiting for services to be ready..."
	sleep 30
	@echo "üîç Checking database connection..."
	@until docker exec 5500_database_dev pg_isready -U class_connect_user -d class_connect_db; do echo "Waiting for database..."; sleep 2; done
	@echo "üîÑ Running database migrations..."
	docker-compose -f docker-compose.dev.yml exec backend uv run alembic upgrade head
	@echo "üå± Seeding database..."
	docker-compose -f docker-compose.dev.yml exec backend uv run python scripts/seed.py
	@echo "‚úÖ Full 5500 stack is running!"
	@echo "üöÄ Backend: http://localhost:8000"
	@echo "üìä Database: localhost:5432"
	@echo "üåê pgAdmin: http://localhost:5050"
	@echo "üìã pgAdmin Login: admin@classconnect.com / admin_password"

.PHONY: docker-down
docker-down:
	@echo "üõë Stopping Docker services..."
	docker-compose -f docker-compose.dev.yml down
	@echo "‚úÖ Docker services stopped"

.PHONY: docker-logs
docker-logs:
	@echo "üìã Showing Docker logs..."
	docker-compose -f docker-compose.dev.yml logs -f backend database

.PHONY: docker-reset
docker-reset:
	@echo "üîÑ Resetting 5500 database..."
	docker-compose -f docker-compose.dev.yml down -v
	docker-compose -f docker-compose.dev.yml up -d database
	@echo "‚úÖ 5500 database reset complete"

.PHONY: docker-rebuild
docker-rebuild:
	@echo "üîÑ Completely rebuilding Docker environment..."
	@echo "üõë Stopping and removing containers and volumes..."
	docker-compose -f docker-compose.dev.yml down -v
	@echo "üê≥ Starting fresh development stack..."
	docker-compose -f docker-compose.dev.yml up -d
	@echo "‚è≥ Waiting for database to be ready..."
	sleep 20
	@echo "üîç Checking database connection..."
	@until docker exec 5500_database_dev pg_isready -U class_connect_user -d class_connect_db; do echo "Waiting for database..."; sleep 2; done
	@echo "üîÑ Running database migrations..."
	docker-compose -f docker-compose.dev.yml exec backend uv run alembic upgrade head
	@echo "üå± Seeding database with sample data..."
	docker-compose -f docker-compose.dev.yml exec backend uv run python scripts/seed.py
	@echo "‚úÖ Complete rebuild finished!"
	@echo "üìä Database: localhost:5432"
	@echo "üåê pgAdmin: http://localhost:5050"
	@echo "üöÄ Backend: http://localhost:8000"
	@echo "üìã Login: admin@classconnect.com / admin_password"


.PHONY: db-shell
db-shell:
	@echo "üêö Connecting to 5500 database shell..."
	docker-compose -f docker-compose.dev.yml exec database psql -U class_connect_user -d class_connect_db

.PHONY: db-backup
db-backup:
	@echo "üíæ Creating 5500 database backup..."
	docker-compose -f docker-compose.dev.yml exec database pg_dump -U class_connect_user class_connect_db > backup_$(shell date +%Y%m%d_%H%M%S).sql
	@echo "‚úÖ Backup created"

# -------------------------------------------------
# DATABASE COMMANDS
# -------------------------------------------------
.PHONY: db-migrate
db-migrate:
	@echo "üîÑ Running database migrations..."
	@if docker ps | grep -q 5500_backend_dev; then \
		echo "Running migrations in Docker container..."; \
		docker-compose -f docker-compose.dev.yml exec backend uv run alembic upgrade head; \
	else \
		echo "Running migrations locally..."; \
		$(UV) alembic upgrade head; \
	fi

.PHONY: db-seed
db-seed:
	@echo "üå± Seeding database with sample data..."
	@if docker ps | grep -q 5500_backend_dev; then \
		echo "Running seed script in Docker container..."; \
		docker-compose -f docker-compose.dev.yml exec backend uv run python scripts/seed.py; \
	else \
		echo "Running seed script locally..."; \
		$(UV) python scripts/seed.py; \
	fi

.PHONY: db-check
db-check:
	@echo "üîç Checking database state..."
	@if docker ps | grep -q 5500_backend_dev; then \
		echo "Running database check in Docker container..."; \
		docker-compose -f docker-compose.dev.yml exec backend uv run python scripts/check_db_state.py; \
	else \
		echo "Running database check locally..."; \
		$(UV) python scripts/check_db_state.py; \
	fi

.PHONY: db-clean
db-clean:
	@echo "üßπ Cleaning all data from database..."
	@if docker ps | grep -q 5500_backend_dev; then \
		echo "Running database cleanup in Docker container..."; \
		docker-compose -f docker-compose.dev.yml exec backend uv run python scripts/clean_db.py; \
	else \
		echo "Running database cleanup locally..."; \
		$(UV) python scripts/clean_db.py; \
	fi

.PHONY: db-clean-force
db-clean-force:
	@echo "üßπ Force cleaning all data from database..."
	@if docker ps | grep -q 5500_backend_dev; then \
		echo "Running force database cleanup in Docker container..."; \
		docker-compose -f docker-compose.dev.yml exec backend uv run python scripts/clean_db.py --force; \
	else \
		echo "Running force database cleanup locally..."; \
		$(UV) python scripts/clean_db.py --force; \
	fi

.PHONY: db-status
db-status:
	@echo "üìä Checking database status..."
	@if docker ps | grep -q 5500_backend_dev; then \
		echo "Running database status check in Docker container..."; \
		docker-compose -f docker-compose.dev.yml exec backend uv run python scripts/clean_db.py --check; \
	else \
		echo "Running database status check locally..."; \
		$(UV) python scripts/clean_db.py --check; \
	fi



